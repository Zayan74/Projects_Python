import random
fuel = 50
distance_traveled = 0
goal_distance = 100

while fuel > 0 and distance_traveled < goal_distance:
    print("--- Current Status ---")
    print(f"Fuel: {fuel}")
    print(f"Distance Traveled: {distance_traveled} light-years")
    
    print("Choose your action:")
    print("1. Travel forward")
    print("2. Search for fuel")
    choice = input("Enter 1, or 2: ")

    if choice == "1":
        travel_distance = random.randint(10, 20)
        fuel_cost = random.randint(8, 15)
        distance_traveled += travel_distance
        fuel -= fuel_cost
        print(f"You traveled {travel_distance} light-years but used {fuel_cost} fuel.")
    
    elif choice == "2":
        event = random.randint(1, 2)
        if event == 1:
            found = random.randint(10, 25)
            fuel += found
            print(f"You found {found} gallons of fuel!")
        elif event == 2:
            lost = random.randint(1, 5)
            fuel -= lost
            print(f"You couldn't find any fuel, and used up {lost} amount of fuel while trying to find fuel")
    
    
    space_event = ["space storm", "black hole", "wormhole"]
    random_event = random.choice(space_event)
    if random_event == "Space Storm":
        Lost = random.randint(1, 5)
        fuel -= Lost
        print(f"A space storm occurred and you lost {Lost} fuel in it")
    elif random_event == "black hole":
        Lost = random.randint(5, 10)
        fuel -= Lost
        print(f"A black hole occurred and you lost {Lost} fuel trying to escape it")
    elif random_event == "wormhole":
        Lost = random.randint(1, 3)
        distance_traveled -= Lost
        print(f"A wormhole occurred and you got sent {Lost} light years back after traveling through")
    

if fuel <= 0:
    print("You ran out of fuel.")
    print(f"You ended with {distance_traveled} light years traveled with {fuel} gallons of fuel remaining")
elif distance_traveled >= goal_distance:
    print("You reached your destination! Congratulations!")
