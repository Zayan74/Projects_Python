def show_menu():
    print("To-Do List Menu")
    print("1. View To-Do List")
    print("2. Add Task")
    print("3. Remove Task")
    print("4. Exit")

def add_task(tasks):
    task = input("Enter a new task: ").strip()
    tasks.append(task)
    print("Task", task, "added.")

def view_tasks(tasks):
    if len(tasks) == 0:
        print("Your to-do list is empty.")
    else:
        print(f"Your To-Do List: {tasks}")
        

def remove_task(tasks):
    view_tasks(tasks)
    try:
        if len(tasks) > 0:
            task_remove = input("What task do you want to remove: ")
            tasks.remove(task_remove)
        else:
            print("You have no tasks to remove")
    except:
        print("That task doesnt exist")
        

def main():
    tasks = []
    while True:
        show_menu()
        choice = input("Choose an option (1-4): ")
        
        if choice == "1":
            view_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            remove_task(tasks)
        elif choice == "4":
            print("Exiting To-Do List. Goodbye.")
            break
        else:
            print("Invalid choice. Please enter 1-4.")

if __name__ == "__main__":
    main()
