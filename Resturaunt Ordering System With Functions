cuisine = input("What type of Cuisine would you like to eat (Meat, Pasta, or Drinks): ").lower()
def MeatMenu():
    print("Here is the meat menu")
    print("MENU")
    print("1. Steak")
    print("2. Lamb Chops")
    print("3. Shrimp")
    

def PastaMenu():
    print("Here is the pasta menu")
    print("MENU")
    print("1. Alferedo Pasta")
    print("2. Angel Hair Pasta")
    print("3. Linguini Pasta")
    
    
def DrinkMenu():
    print("Here is the drink menu")
    print("MENU")
    print("1. Sprite")
    print("2. Orange Juice")
    print("3. Coca Cola")
    
if cuisine == "meat":
    MeatMenu()
    number = int(input("Enter a number for your order (1-3): "))
elif cuisine == "pasta":
    PastaMenu()
    number = int(input("Enter a number for your order (1-3): "))
elif cuisine == "drinks":
    DrinkMenu()
    number = int(input("Enter a number for your order (1-3): "))
else:
    print("Error no cuisine was picked.")
try:
    print(f"Your order is {number} in the {cuisine} menu")
    

except ValueError:
    print("Thank you for ordering!")
